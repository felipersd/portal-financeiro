generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          String   @id @default(uuid())
  description String
  amount      Float
  type        String   // 'income' | 'expense'
  category    String
  date        DateTime
  isShared    Boolean
  payer       String   // 'me' | 'spouse'
  createdAt   DateTime @default(now())
  recurrenceId String?
  splitDetails Json?
  
  userId      String   // Logical reference to IdentityService User
}

model Category {
  id   String @id @default(uuid())
  name String
  type String // 'income' | 'expense'
  
  userId String // Logical reference to IdentityService User
}
